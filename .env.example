# Security Threat Intelligence Monitor Configuration
# Copy this file to .env and fill in your values

# VirusTotal API Key (required for file/IP threat scanning)
# Get your free API key at: https://www.virustotal.com/gui/join-us
VIRUSTOTAL_API_KEY=your_api_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=security_threats.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Monitoring Configuration
SCAN_INTERVAL_SECONDS=1
RISK_THRESHOLD_WARNING=3
RISK_THRESHOLD_CRITICAL=5
PROCESS_CACHE_TTL_SECONDS=60

# Network Monitoring
ENABLE_PACKET_CAPTURE=true
PACKET_BUFFER_SIZE=2000
